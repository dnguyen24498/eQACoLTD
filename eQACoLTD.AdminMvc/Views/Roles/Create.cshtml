@model CreateRoleRequest
<div class="w-100">
    <div class="row">
        <div class="col-md-12">
            <div class="col-sm-3 offset-md-9 mt-3 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Thông tin tài khoản...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary text-light" type="button">Tìm kiếm</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Thêm<small>phân quyền</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="#">Settings 1</a>
                                <a class="dropdown-item" href="#">Settings 2</a>
                            </div>
                        </li>
                        <li>
                            <a class="close-link"><i class="fa fa-close"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="card border-dark p-1 col-md-4 offset-md-4">
                    <div class="card-header bg-dark text-white h5">
                        Thêm phân quyền
                    </div>
                    <div class="card-body">
                        <form method="post" asp-controller="Roles" asp-action="Create">
                            <div class="form-group p-1">
                                <label class="card-text h6" asp-for="@Model.Name">Tên quyền</label>
                                <input type="text" class="form-control" asp-for="@Model.Name" placeholder="Nhập tên quyền">
                            </div>
                            <div class="form-group p-1">
                                <label class="card-text h6" asp-for="@Model.Description">Mô tả</label>
                                <textarea class="form-control" asp-for="@Model.Description" style="max-height:400px;height:200px" id="exampleInputEmail1" placeholder="Nhập mô tả"></textarea>
                            </div>
                            <div class="float-md-right">
                                <button type="submit" class="btn btn-primary">Thêm</button>
                                <a class="btn btn-secondary text-white" style="cursor:pointer">Quay lại</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>