@model List<ListProductHomeResponse>
@if (Model.Count > 0)
{
    foreach (var p in Model)
    {
        <div class="featured_slider_item">
            <div class="border_active"></div>
            <div class="product_item d-flex flex-column align-items-center justify-content-center text-center">
                <div class="product_image d-flex flex-column align-items-center justify-content-center"><img src=@p.ImagePath alt=""></div>
                <div class="product_content">
                    <div class="product_price">@p.RetailPrice.ToString("#,##0") đ</div>
                    <div class="product_name"><div><a href="product.html">@p.Name</a></div></div>
                    <div class="product_extras">
                        <p>Thương hiệu: @p.BrandName</p>
                        <div class="bestsellers_rating">
                            @{
                                if (p.StarScore > 0)
                                {
                                    for (int i = 0; i < p.StarScore; i++)
                                    {
                                        <i class="fa fa-star" style="color:#ffe234"></i>
                                    }
                                }
                            }
                        </div>
                        <button class="product_cart_button">Thêm vào giỏ hàng</button>
                    </div>
                </div>
                <div class="product_fav"><i class="fas fa-heart"></i></div>
                <ul class="product_marks">
                    <li class="product_mark product_discount"></li>
                    <li class="product_mark product_new">new</li>
                </ul>
            </div>
        </div>
    }
}


