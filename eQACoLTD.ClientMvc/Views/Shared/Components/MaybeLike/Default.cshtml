@inject IConfiguration Configuration
@using Microsoft.AspNetCore.Http
@model List<ProductCardDto>
@{
    if (Model.Count > 0)
    {
        foreach (var p in Model)
        {
            <!-- Recently Viewed Item -->
            <div class="owl-item">
                <div class="viewed_item discount d-flex flex-column align-items-center justify-content-center text-center">
                    <p>@p.CategoryName</p>
                    <div class="viewed_image"><img src='@Configuration["APIServerHost"]app-content/@p.ImagePath'></div>
                    <div class="bestsellers_rating">
                        @{
                            if (p.Stars > 0)
                            {
                                for (int i = 0; i < p.Stars; i++)
                                {
                                    <i class="fa fa-star" style="color:#ffe234"></i>
                                }
                            }
                        }
                    </div>
                    <div class="viewed_content text-center">
                        <div class="viewed_price">@p.RetailPrice.ToString("#,##0") đ</div>
                        <div class="viewed_name"><a asp-controller="Product" asp-action="Index" asp-route-productId=@p.Id>@p.Name</a></div>
                        <p>Thương hiệu: @p.BrandName</p>
                    </div>
                </div>
            </div>
        }
    }
}