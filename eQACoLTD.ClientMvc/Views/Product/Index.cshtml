@model ProductDto
@inject IConfiguration Configuration
@{
    Layout = "_Layout";
}

@section Scripts
{
    <script>
		function changeImage(el) {
			console.log($(el).attr('src'));
		  $(".image_selected").empty().append('<img style="height: 300px;width: 300px" src='+$(el).attr('src')+'>');
		}
	</script>
}

<div class="single_product">
    <div class="container">
        <div class="row">

            <!-- Images -->
            <div class="col-lg-2 order-lg-1 order-2">
                <ul class="image_list">
                    @foreach (var pi in @Model.ListImage)
                    {
                        <li data-image="@Configuration["APIServerHost"]app-content/@pi.ImagePath">
                            <img onclick="changeImage(this)" src="@Configuration["APIServerHost"]app-content/@pi.ImagePath">
                        </li>
                    }
                </ul>
            </div>

            <!-- Selected Image -->
            <div class="col-lg-5 order-lg-2 order-1">
                <div class="image_selected">
                    <img src="@Configuration["APIServerHost"]app-content/@Model.ListImage.Where(x => x.IsThumbnail == true).SingleOrDefault().ImagePath"
                         style="height: 300px;width: 300px">
                </div>
            </div>

            <!-- Description -->
            <div class="col-lg-5 order-3">
                <div class="product_description">
                    <div class="product_category">@Model.CategoryName</div>
                    <div class="product_name">@Model.Name</div>
                    <div class="bestsellers_rating">
                        <p>Số sao đánh giá: </p>
                        @{
                            if (Model.Stars > 0)
                            {
                                for (int i = 0; i < Model.Stars; i++)
                                {
                                    <i class="fa fa-star" style="color:#ffe234"></i>
                                }
                            }
                        }
                    </div>
                    <div class="product_text">
                        <p>Tổng quan cấu hình: @Model.OverView</p>
                    </div>
                    <div class="order_info d-flex flex-row">
                        <form action="#">
                            <div class="clearfix" style="z-index: 1000;">
                                <!-- Product Quantity -->
                                <div class="product_quantity clearfix">
                                    <span>Quantity: </span>
                                    <input id="quantity_input" type="text" pattern="[0-9]*" value="1">
                                    <div class="quantity_buttons">
                                        <div id="quantity_inc_button" class="quantity_inc quantity_control">
                                            <i class="fas fa-chevron-up"></i>
                                        </div>
                                        <div id="quantity_dec_button" class="quantity_dec quantity_control">
                                            <i class="fas fa-chevron-down"></i>
                                        </div>
                                    </div>
                                </div>

                                <!-- Product Color -->
                                <ul class="product_color">
                                    <li>
                                        <span>Color: </span>
                                        <div class="color_mark_container">
                                            <div id="selected_color" class="color_mark"></div>
                                        </div>
                                        <div class="color_dropdown_button">
                                            <i class="fas fa-chevron-down"></i>
                                        </div>

                                        <ul class="color_list">
                                            <li>
                                                <div class="color_mark" style="background: #999999;"></div>
                                            </li>
                                            <li>
                                                <div class="color_mark" style="background: #b19c83;"></div>
                                            </li>
                                            <li>
                                                <div class="color_mark" style="background: #000000;"></div>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>

                            </div>

                            <div class="product_price">Giá: @Model.RetailPrice.ToString("#,##0") đ</div>
                            <div class="button_container">
                                <button type="button" class="button cart_button">Thêm vào giỏ</button>
                                <div class="product_fav">
                                    <i class="fas fa-heart"></i>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>