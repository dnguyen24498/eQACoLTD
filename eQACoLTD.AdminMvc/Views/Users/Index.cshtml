@model PagedResult<UserProfileResponse>
<div class="w-100">
    <div class="row">
        <div class="col-md-12">
            <div class="col-sm-3 offset-md-9 mt-3 form-group pull-right top_search">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Thông tin tài khoản...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary text-light" type="button">Tìm kiếm</button>
                    </span>
                </div>
            </div>
        </div>
    </div>


    <div class="clearfix"></div>

    <div class="row">
        <div class="col-md-12 col-sm-12 ">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Tài khoản<small>người dùng</small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li class="pl-1" data-toggle="tooltip" data-placement="bottom" title="Sắp xếp">
                            <a><i class="fa fa-filter"></i></a>
                        </li>
                        <li class="pl-1" data-toggle="tooltip" data-placement="bottom" title="Cài đặt hiển thị">
                            <a><i class="fa fa-wrench"></i></a>
                        </li>
                        <li class="pl-1" data-toggle="tooltip" data-placement="bottom" title="Thu nhỏ/Phóng to">
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <p>Danh sách tài khoản trong hệ thống</p>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr class="headings">
                                <th class="text-center">STT </th>
                                <th class="text-center">Tài khoản </th>
                                <th class="text-center">Họ Tên</th>
                                <th class="text-center">Giới tính </th>
                                <th class="text-center">Ngày sinh </th>
                                <th class="text-center">Địa chỉ </th>
                                <th class="text-center">Số điện thoại </th>
                                <th class="text-center">Hành động</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                foreach (var r in Model.Results.Select((value, i) => new { i, value }))
                                {
                                    <tr>
                                        <td class="text-center">
                                            @{
                                                int index = r.i + 1;
                                                <p>@index</p>
                                            }
                                        </td>
                                        <td class="text-break text-center">@r.value.UserName</td>
                                        <td class="text-break text-center">
                                            @if (string.IsNullOrEmpty(r.value.FirstName) &&
                                        string.IsNullOrEmpty(r.value.MiddleName) &&
                                        string.IsNullOrEmpty(r.value.LastName))
                                            {
                                                <p>Chưa điền</p>
                                            }
                                            @r.value.FirstName @r.value.MiddleName @r.value.LastName
                                        </td>
                                        <td class="text-break text-center">
                                            @{
                                                if (r.value.Gender == true)
                                                {
                                                    <p>Nam</p>
                                                }
                                                else
                                                {
                                                    <p>Nữ</p>
                                                }
                                            }
                                        </td>
                                        <td class="text-break text-center">@r.value.DOB.ToString("dd/MM/yyyy")</td>
                                        <td class="text-break text-center">
                                            @if (string.IsNullOrEmpty(r.value.Address) &&
                                        string.IsNullOrEmpty(r.value.Street) &&
                                        string.IsNullOrEmpty(r.value.District) &&
                                        string.IsNullOrEmpty(r.value.SubDistrict) &&
                                        string.IsNullOrEmpty(r.value.City))
                                            {
                                                <p>Chưa điền</p>
                                            }
                                            @r.value.Address @r.value.Street @r.value.SubDistrict @r.value.District @r.value.City
                                        </td>
                                        <td class="text-break text-center">
                                            @if (string.IsNullOrEmpty(r.value.PhoneNumber))
                                            {
                                                <p>Chưa điền</p>
                                            }
                                            @r.value.PhoneNumber
                                        </td>
                                        <td class="text-center">
                                            <form method="post">
                                                <input type="hidden" asp-for="@r.value.UserName" />
                                                <a asp-controller="Users" asp-action="Roles"
                                                        class="btn btn-primary" asp-route-userName="@r.value.UserName">
                                                    <i class="fa fa-info-circle"></i>
                                                    Chi tiết
                                                </a>
                                                <button class="btn btn-warning">
                                                    <i class="fa fa-lock" data-toggle="tooltip" data-placement="bottom" title="Khóa/Mở khóa"></i>
                                                    Khóa
                                                </button>
                                                <button class="btn btn-danger">
                                                    <i class="fa fa-trash-o text-white" data-toggle="tooltip" data-placement="bottom" title="Khóa/Mở khóa"></i>
                                                    Xóa
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                @(await Component.InvokeAsync<PagerViewComponent>(Model))
            </div>
        </div>
    </div>
</div>